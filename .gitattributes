###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto
# Sources
*.c     text diff=cpp
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=cpp
*.h++   text diff=cpp
*.hh    text diff=cpp
*.md	text diff=markdown
*.mdx	text diff=markdown
*.tex	text diff=tex
*.json  text
*.toml	text
*.xml	text
*.yaml	text
*.yml	text

###############################
# Git Large File System (LFS) #
###############################

# Compiled Object files
*.slo   filter=lfs diff=lfs merge=lfs -text
*.lo    filter=lfs diff=lfs merge=lfs -text
*.o     filter=lfs diff=lfs merge=lfs -text
*.obj   filter=lfs diff=lfs merge=lfs -text

# Precompiled Headers
*.gch   filter=lfs diff=lfs merge=lfs -text
*.pch   filter=lfs diff=lfs merge=lfs -text

# Compiled Dynamic libraries
*.so    filter=lfs diff=lfs merge=lfs -text
*.dylib filter=lfs diff=lfs merge=lfs -text
*.dll   filter=lfs diff=lfs merge=lfs -text

# Compiled Static libraries
*.lai   filter=lfs diff=lfs merge=lfs -text
*.la    filter=lfs diff=lfs merge=lfs -text
*.a     filter=lfs diff=lfs merge=lfs -text
*.lib   filter=lfs diff=lfs merge=lfs -text

# Executables
*.exe filter=lfs diff=lfs merge=lfs -text
*.out   filter=lfs diff=lfs merge=lfs -text
*.app   filter=lfs diff=lfs merge=lfs -text

# Batsh
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf
*.sh text eol=lf
*.{vcxproj,vcxproj.filters} text eol=crlf

# Archives
*.7z filter=lfs diff=lfs merge=lfs -text
*.br filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text

# Documents
#*.pdf filter=lfs diff=lfs merge=lfs -text

# image files
*.gif filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -tex
*.png filter=lfs diff=lfs merge=lfs -text
*.psd filter=lfs diff=lfs merge=lfs -text
*.webp filter=lfs diff=lfs merge=lfs -text
*.svg text

# Fonts
*.woff2 filter=lfs diff=lfs merge=lfs -text

# Other
*.exe filter=lfs diff=lfs merge=lfs -text
